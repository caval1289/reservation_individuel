{% extends 'base.html.twig' %}

{% block title %}Liste des roles{% endblock %}

{% block body %}
    <h1>Liste des {{ resource }}</h1>

    <ul>
    {% for role in roles %}
        <li><a href="{{ path('role_show', { id: role.id }) }}">{{ role.role }}</a></li>
    {% endfor %}
    </ul>
{% endblock %}
